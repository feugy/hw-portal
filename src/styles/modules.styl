@require 'variables'

.icon-link
  text-align center
  display inline-block

  > i
    display inline-block
    $edge = 7rem
    font-size 5rem
    width $edge
    line-height $edge
    border-radius 100%
    background-color $primary-color
    color $primary-inverted-color

  > label
    color $primary-color
    font-size 1.5rem

.list
  width 100%
  margin 0

  .list-item
    list-item none
    display flex
    justify-content space-around
    background $third-color
    color $third-inverted-color
    margin 0.5rem
    padding 0 0.5rem
    line-height 50px

    > *
      padding 0.5rem

.fi-delta:before
  transform rotate(-90deg)
  content "\f198"
  font-family "foundation-icons"
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  display inline-block
  text-decoration inherit
