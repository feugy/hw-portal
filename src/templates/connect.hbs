{{#panel-layout}}
  <header class="l-header row">
    <h2 class="small-8 column">{{translate 'nav.connect'}}</h2>
  </header>
  <div class="row l-scrollable">
    <article class="medium-6 column log-in">
      <h1>{{translate 'ttl.logIn'}}</h1>
      <div>
        <h4>{{translate 'lbl.logInWith'}}</h4>
        <ul class="l-nav">
          <li><a href="#" {{action "logWith" "github-oauth2"}}><i class="fi-social-github"></i></a></li>
          <li><a href="#" {{action "logWith" "google-oauth2"}}><i class="fi-social-google-plus"></i></a></li>
        </ul>
        <h4>{{translate 'lbl.logIn'}}</h4>
        <form>
          <div class="row">
            {{input class="small-12 columns" value=logIn.login placeholder=emailPlaceholder type="email"}}
            {{#if logIn.loginMissing}}<small class="error">{{translate 'err.loginMissing'}}</small>{{/if}}
          </div>
          <div class="row">
            {{input class="small-12 columns" value=logIn.password placeholder=passwordPlaceholder type="password"}}
            {{#if logIn.passwordMissing}}<small class="error">{{translate 'err.passwordMissing'}}</small>{{/if}}
          </div>
          <div class="row">
            <div class="alert-box alert {{unless connectError 'hide'}}">
              {{connectError}}
              <a href="" {{action "closeConnectError"}} class="close">&times;</a>
            </div>
            <a class="button {{unless logIn.valid 'disabled'}}" href="" {{action "logWith" "huby-woky"}}><i class="fi-paw"></i>{{translate 'btn.logIn'}}</a>
          </div>
        </form>
      </div>
    </article>
    <article class="medium-6 column sign-in">
      <h1>{{translate 'ttl.signIn'}}</h1>
      <p>{{translate 'msg.majorityNeeded'}}</p>
      <div>
        <h4>{{translate 'lbl.signIn'}}</h4>
        <form>
          <div class="row">
            {{input class="small-12 columns" value=signIn.login placeholder=emailPlaceholder type="email"}}
            {{#if signIn.loginMissing}}<small class="error">{{translate 'err.loginMissing'}}</small>{{/if}}
          </div>
          <div class="row">
            {{input class="small-12 columns" value=signIn.password placeholder=passwordPlaceholder type="password"}}
            {{#if signIn.passwordMissing}}<small class="error">{{translate 'err.passwordMissing'}}</small>{{/if}}
          </div>
          <div class="row {{unless signIn.password 'hide'}}">
            {{input class="small-12 columns" value=signIn.confirm placeholder=passwordConfirmPlaceholder type="password"}}
            {{#if signIn.confirmDiffers}}<small class="error">{{translate 'err.passwordConfirmDiffers'}}</small>{{/if}}
          </div>
          <div class="row">
            <div class="small-1 columns">
              {{input type="checkbox" id="confirmMajority"}}
            </div>
            <div class="small-11 columns">
              <label class="inline" for="confirmMajority">{{translate 'lbl.confirmMajority'}}</label>
            </div>
          </div>
          <div class="row">
            <a class="button {{unless signIn.valid 'disabled'}}"><i class="fi-plus"></i>{{translate 'btn.signIn'}}</a>
          </div>
        </form>
      </div>
    </article>
  </div>
{{/panel-layout}}