{{#panel-layout session=session}}
  <header class="l-header row">
    <h2 class="small-8 column">{{translate currentSort.title}}</h2>
    <div class="small-4 column">
      {{#f-button dropdownId="sort-dropdown" class="tiny dropdown"}}
          {{translate currentSort.label}}
      {{/f-button}}
      {{#f-dropdown id="sort-dropdown" data-dropdown-content=""}}
      {{#each sortCriteria as |sort|}}
        <li>{{#link-to 'rankings' (query-params sort=sort.field)}}{{translate sort.label}}{{/link-to}}</li>
      {{/each}}
      {{/f-dropdown}}
    </div>
  </header>
  <ul class="list l-scrollable">
    {{#each model as |gamer|}}
      {{ranking-gamer gamer=gamer list=model sort=currentSort.field}}
    {{/each}}
    {{infinity-scroll model=model scrollable=".list" position=scrollPosition}}
  </ul>
{{/panel-layout}}